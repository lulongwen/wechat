<view class="page-body">
  <view class="page-section page-section-gap">
    <view class="page-section-title">设置 step</view>
    <view class="body-view">
      <slider show-value value="80" step="10" bindchange="slider2change" />
    </view>
  </view>

  <view class="page-section page-section-gap">
    <view class="page-section-title">显示当前 value</view>
    <view class="body-view">
      <slider show-value value="30" bindchange="slider3change" />
    </view>
  </view>

  <view class="page-section page-section-gap">
    <view class="page-section-title">设置最大值/最小值</view>
    <view class="body-view">
      <slider
        show-value
        min="50"
        max="200"
        value="100"
        bindchange="slider4change"></slider>
    </view>
  </view>
</view>